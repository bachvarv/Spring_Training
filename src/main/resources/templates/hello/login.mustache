<html>
    <head>

        <link rel ="stylesheet" href ="/webjars/bootstrap/css/bootstrap.min.css" >
        <link rel ="stylesheet" href ="/css/login/login.css" >

        <script src ="/webjars/jquery/jquery.min.js" defer ></script>

        <script src ="/webjars/bootstrap/js/bootstrap.min.js" defer ></script>
        <title>Login</title>
    </head>
    <body class="bg-light">
        <div class="text-center">
            <form method="post" action="/login" class="form-login">
                <h2>Login</h2>
                <!-- User ID-->
                <div>
                    <label for="userId" class="sr-only">userId:</label>
                    <input type="text" class="form-control" placeholder="User ID" name="userId" />

                </div>

                <!-- Password-->
                <div>
                    <label for="password" class="sr-only">password:</label>
                        <input type="text" class="form-control" placeholder="Password" name="password" />
                </div>
                <input type="submit" value="Login" class="btn btn-primary">
            </form>
            <a href="/user/signup">Signup</a>
        </div>
    </body>
</html>